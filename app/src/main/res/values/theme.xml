<resources>
    <style name="BaseTheme" parent="Theme.AppCompat.Light">

    </style>
    <style name="Theme" parent="BaseTheme">
        <item name="android:editTextStyle">@style/Ushahidi.Widget.EditText</item>
    </style>
    <style name="Theme.Widget" parent="Theme.AppCompat" />

    <style name="Theme.Ushahidi.Base" parent="Theme">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_2</item>
        <item name="actionBarIconColor">#fff</item>
        <item name="actionBarInsetStart">@dimen/keyline_2</item>
        <item name="android:textColorLink">@color/theme_accent_2</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="spinnerBarInsetStart">@dimen/keyline_2_minus_16dp</item>
        <item name="popupItemBackground">?android:selectableItemBackground</item>
        <item name="photoItemForeground">?android:selectableItemBackground</item>
        <item name="photoItemForegroundBorderless">?android:selectableItemBackground</item>
        <item name="android:popupMenuStyle">@style/Ushahidi.Widget.PopupMenu</item>
        <item name="android:listPopupWindowStyle">@style/Ushahidi.Widget.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ActionbarDropdown.ListView.DropDown</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu
        </item>
        <item name="drawerArrowStyle">@style/Ushahidi.Widget.DrawerArrow</item>
        <item name="searchViewStyle">@style/Ushahidi.SearchBar.Widget</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
    <style name="Theme.Ushahidi" parent="Theme.Ushahidi.Base"/>

    <style name="Theme.Ushahidi.NoActionBar" parent="android:Theme.Light.NoTitleBar.Fullscreen"/>

    <style name="Theme.Ushahidi.Actionbar.Black" parent="Transparent"/>

    <style name="Theme.Ushahidi.PopupActivity" parent="Theme.Ushahidi"/>

    <style name="Theme.Ushahidi.Widget" parent="Ushahidi.Widget">
        <item name="android:popupMenuStyle">@style/Ushahidi.Widget.PopupMenu</item>
        <item name="android:listPopupWindowStyle">@style/Ushahidi.Widget.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ActionbarDropdown.ListView.DropDown</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu
        </item>
    </style>
</resources>