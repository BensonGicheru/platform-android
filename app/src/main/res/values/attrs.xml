<resources>
    <declare-styleable name="UshahidiTheme">
        <attr name="actionBarIconColor" format="color"/>
        <attr name="actionBarInsetStart" format="dimension"/>
        <attr name="spinnerBarInsetStart" format="dimension"/>
        <attr name="popupItemBackground" format="reference"/>
        <attr name="photoItemForeground" format="reference"/>
        <attr name="photoItemForegroundBorderless" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BezelImageView">
        <attr name="maskDrawable" format="reference"/>
        <attr name="borderDrawable" format="reference"/>
        <attr name="desaturateOnPress" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MultiSwipeRefreshLayout">
        <attr name="foreground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ScrimInsetsView">
        <attr name="insetForeground" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="SlidingTabLayout">
        <attr name="selectedColor" format="color"/>
        <attr name="indicatorHeight" format="reference|dimension"/>
        <attr name="dividerColor" format="color"/>
        <attr name="android:textAppearance"/>
    </declare-styleable>

    <declare-styleable name="FontSupportedTextView">
        <attr name="fontFile" format="string"/>
    </declare-styleable>
    <declare-styleable name="FloatLabelLayout">
        <attr name="floatLabelTextAppearance" format="reference"/>
        <attr name="floatLabelPaddingLeft" format="reference|dimension"/>
        <attr name="floatLabelPaddingRight" format="reference|dimension"/>
        <attr name="floatLabelPaddingTop" format="reference|dimension"/>
        <attr name="floatLabelPaddingBottom" format="reference|dimension"/>
        <!-- The hint to display in the floating label -->
        <attr name="floatLabelHint" format="reference|string"/>
    </declare-styleable>

    <!-- BloatedRecyclerView -->
    <declare-styleable name="BloatedRecyclerView">
        <attr name="recyclerviewClipToPadding" format="boolean"/>
        <attr name="recyclerviewPadding" format="dimension"/>
        <attr name="recyclerviewPaddingTop" format="dimension"/>
        <attr name="recyclerviewPaddingBottom" format="dimension"/>
        <attr name="recyclerviewPaddingLeft" format="dimension"/>
        <attr name="recyclerviewPaddingRight" format="dimension"/>
        <attr name="recyclerviewEmptyView" format="reference"/>
        <attr name="recyclerviewFloatingActionView" format="reference"/>
        <attr name="recyclerviewScrollbars" format="enum">
            <enum name="none" value="0"/>
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>
    </declare-styleable>
</resources>